<!DOCTYPE validators PUBLIC
         "-//Apache Struts//XWork Validator 1.0.3//EN"
           "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <validator type="requiredstring">
        <param name="fieldname">person.firstName</param>
        <message>Nome é obrigatório.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">person.lastName</param>
        <message>Sobrenome é obrigatório.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">person.age</param>
        <message>Idade é obrigatório.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">person.gender</param>
        <message>Gênero é obrigatório.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">person.email</param>
        <message>Email é obrigatório.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">person.phoneNumber</param>
        <message>Telefone é obrigatório.</message>
    </validator>
</validators>